global subroutine pause (long nseconds2pause);datetime dtNow
dtNow = DateTime( Today(), Now() )
Do While ( DaysAfter( Date( dtNow ), Today() ) * 86400 ) +&
				SecondsAfter( Time( dtNow ), Now() ) &
			< nSeconds2Pause
Loop
end subroutine

