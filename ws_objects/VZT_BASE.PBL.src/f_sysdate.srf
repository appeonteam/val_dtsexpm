global function datetime f_sysdate ();datetime ldt_result

SELECT  vzt_getdate() INTO :ldt_result FROM vzt_sysoptions  WHERE id = 1     ;
IF SQLCA.sqlcode <> 0 then ldt_result = datetime( today(), now()) 

return ldt_result
end function

